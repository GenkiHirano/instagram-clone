<%= form_tag(search_path,:method => 'get') do %>
  <%= text_field_tag :search %>
  <%= submit_tag 'Search', :content => nil %>
<% end %>

<% if @posts.present? %>
  <% @posts.each do |post| %>
     <%= post.content %>
     <%= post.image %>
  <% end %>
<% end %>

